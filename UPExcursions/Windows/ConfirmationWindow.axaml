<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UPExcursions.Views.ConfirmationWindow"
        Title="ConfirmationWindow"
        Width="300" 
        Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <StackPanel Margin="20" Spacing="15">
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button Content="OK" Click="OkButton_Click" Width="80" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
