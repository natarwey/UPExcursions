<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="UPExcursions.Views.AuthWindow"
        Title="AuthWindow"
        Width="320"
        Height="220"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Icon="/Assets/logoE.png">

    <StackPanel Margin="20" Spacing="15">
        <TextBox Name="EmailBox" Watermark="Email"/>
        <TextBox Name="PasswordBox" Watermark="Password" PasswordChar="●"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
            <Button Content="Войти" Click="LoginButton_Click" Width="80" Height="30" Background="#9400D3" Foreground="White" />
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Width="165" Height="30" Background="white" BorderBrush="#9400D3"/>
        </StackPanel>
    </StackPanel>
</Window>
